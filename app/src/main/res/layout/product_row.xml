<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:elevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/demo_user"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProductName"
                        android:text="Ninja"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvProductDescription"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maisto 1:12 Kawasaki Ninja ZX-6R Diecast Scale Bike -EduToys"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_place"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tvProductAddress"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Bangalore"/>
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvProductPrice"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:text="$ 450"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/tvProductColor"
                            android:textSize="13sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Bike Color : Blue"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="13sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="BikeNumber:"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/tvProductNumber"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="1234567890"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cart"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_dark"
                android:padding="5dp"
                android:id="@+id/llStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/tvProductStatus"
                    android:text="Booked"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>