<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/llMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scrollbars="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="260dp">
                                <ImageView
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imgProduct"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:src="@drawable/demo_user"/>
                                <LinearLayout
                                    android:layout_marginTop="20dp"
                                    android:background="@android:color/holo_red_dark"
                                    android:padding="5dp"
                                    android:id="@+id/llStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/white"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:id="@+id/tvProductStatus"
                                        android:text="Booked"/>
                                </LinearLayout>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvProductName"
                                    android:text="Ninja"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Product Description:"/>
                                <TextView
                                    android:id="@+id/tvProductDescription"
                                    android:textSize="13sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Maisto 1:12 Kawasaki Ninja ZX-6R Diecast Scale Bike -EduToys"/>
                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#bdbdbd"/>
                                <TextView
                                    android:textSize="14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/black"
                                    android:text="Address:"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_place"/>
                                    <TextView
                                        android:layout_marginLeft="5dp"
                                        android:id="@+id/tvProductAddress"
                                        android:textSize="16sp"
                                        android:textColor="@color/colorPrimary"
                                        android:layout_width="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Bangalore"/>
                                </LinearLayout>
                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#bdbdbd"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Product Price"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tvProductPrice"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/black"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="$ 450"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:textStyle="bold"
                                        android:id="@+id/tvProductColor"
                                        android:textSize="14sp"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="Bike Color : Blue"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>
                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#bdbdbd"/>
                                <LinearLayout
                                    android:visibility="visible"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:textSize="14sp"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="Bike Number:"
                                        android:textStyle="bold"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/tvProductNumber"
                                        android:textSize="14sp"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="1234567890"
                                        android:textColor="@android:color/black"
                                        android:textStyle="bold"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>
                                <View
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#bdbdbd"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Book Start Date"/>
                                    <TextView
                                        android:id="@+id/tvStartDate"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/black"
                                        android:layout_width="wrap_content"
                                        android:text="31-08-2018"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <TextView
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Book End Date"/>
                                    <TextView
                                        android:id="@+id/tvEndDate"
                                        android:textSize="16sp"
                                        android:textColor="@android:color/black"
                                        android:layout_width="wrap_content"
                                        android:text="1-09-2018"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </ScrollView>
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:id="@+id/llCart"
                        android:background="@android:color/holo_green_dark"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_shopping_basket"/>
                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADD TO CART"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/llCash"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#2997d8"
                            android:gravity="center">
                            <TextView
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CASH"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llPaypal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#253b80"
                            android:gravity="center">
                            <TextView
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PAYPAL"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shadow" />
        </FrameLayout>

</LinearLayout>